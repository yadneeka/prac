pipeline {
    agent { label 'builtinubuntu' }

    tools {
        jdk 'openjdk 21.0.7'
        maven 'maven 3.9.10'
    }

    stages {

        stage('fetch code') {
            steps {
                git branch: 'main', url: 'https://github.com/yadneeka/prac.git'
            }
        }

        stage('unit test') {
            steps {
                // Runs tests only if a Maven project is present
                sh 'mvn test || echo "Skipping tests ‚Äì no Maven project found."'
            }
        }

        stage('build the code') {
            steps {
                script {
                    def buildResult = sh(returnStatus: true, script: 'mvn package -DskipTests')
                    if (buildResult == 0) {
                        echo '‚úÖ Build successful.'
                    } else {
                        echo '‚ö†Ô∏è No Maven project found, skipping build.'
                    }
                }
            }
        }

        stage('archive the artifact') {
            steps {
                script {
                    if (fileExists('target')) {
                        archiveArtifacts artifacts: '**/*.war', fingerprint: true
                    } else {
                        echo '‚ö†Ô∏è No WAR files found to archive.'
                    }
                }
            }
        }

        stage('deploy to staging') {
            when {
                expression { currentBuild.currentResult == 'SUCCESS' }
            }
            steps {
                echo 'üöÄ Deploying artifact to staging server.'
            }
        }
    }

    // === Step C: Failure Handling ===
    post {
        failure {
            // Runs only if any stage fails
            sh 'echo "Build failed. Notifying the development team."'
        }
    }
}
